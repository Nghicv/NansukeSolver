public class Main {
	public static void main(String [] args){
		
		
		///////
		Nansuke mNansuke=NansukeUtil.arrNansukeQuestions[0];
		HashMap<Integer,ArrayList<int []>> mHashMap=mNansuke.getListTypeNumber();
		ArrayList<Integer> category=mNansuke.getCategory();
		for(int i=0;i<category.size();i++){
			int item =category.get(i);
			System.out.println(item);
			ArrayList<int []> listSequenceNum=mHashMap.get(item);
			for(int j=0;j<listSequenceNum.size();j++){
				int []arr=listSequenceNum.get(j);
				System.out.println(arr.length);
				for(int k=0;k<arr.length;k++){
					
					System.out.print(arr[k]+" ");
				}
				System.out.println();
			}
			System.out.println();
		}
		mNansuke.printTypeCell();
		mNansuke.makeCNF();
		NansukeSolver.Solver("data.txt");
		
		
		JFrame mFrame=new JFrame();
		mFrame.setSize(1000,800 );
		
		mFrame.setLayout(null);
		JPanel mpanel=new JPanel();
		mpanel.setLayout(null);
		mpanel.setSize(300, 800);
		mpanel.setBackground(Color.blue);
		mpanel.setEnabled(true);
		mpanel.setLocation(700, 0);
		JLabel lableMatrix=new JLabel("Size :");
		lableMatrix.setLocation(50, 50);
		lableMatrix.setSize(70, 50);
		mpanel.add(lableMatrix);
		
		String [] typeMatrix={"4x4","5x5","9x9","20x20"};
		JComboBox mComboBox=new JComboBox(typeMatrix);
		mComboBox.setLocation(170, 50);
		mComboBox.setSize(100, 40);
		mComboBox.addActionListener(new ActionListener() {
			
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				JComboBox cb=(JComboBox)e.getSource();
				String itemSelect=(String) cb.getSelectedItem();
				System.out.println(itemSelect);
				
			}
		});
		mpanel.add(mComboBox);
		JButton btnSolver=new JButton("Solver");
		btnSolver.setSize(200, 50);
		btnSolver.setLocation(50, 200);
		btnSolver.addActionListener(new ActionListener() {
			
			public void actionPerformed(ActionEvent e) {
				// TODO Auto-generated method stub
				System.out.println("clicked");
				
			}
		});
		mpanel.add(btnSolver);
		JPanel panelMatrix=new JPanel();
		panelMatrix.setSize(600,500);
		panelMatrix.setLocation(50, 50);
		panelMatrix.setBackground(Color.darkGray);
		mFrame.add(panelMatrix);
		mFrame.add(mpanel);
		mFrame.setVisible(true);
		
	}
